<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/stat_color_bright_11"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/clock_head"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:visibility="invisible"/>


        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="4"
            android:background="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="珍惜每分钟"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/login_text_size"/>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="4"
            android:background="@android:color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:visibility="invisible"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="40dp">
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:visibility="invisible"/>



                <EditText
                    android:id="@+id/reg_accountEt"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="@dimen/login_input_item_height"
                    android:paddingLeft="15dp"
                    android:alpha="0.8"
                    android:background="@drawable/my_edit_text"
                    android:maxLength="20"
                    android:hint="用户名"
                    android:singleLine="true"
                    >

                <requestFocus/>

            </EditText>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:visibility="invisible"/>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/register_pswd_input"

            android:orientation="horizontal"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

            <EditText
                android:id="@+id/reg_pwdEt"
                android:inputType="textPassword"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="@dimen/login_input_item_height"
                android:paddingLeft="15dp"
                android:alpha="0.8"
                android:background="@drawable/my_edit_text"
                android:maxLength="20"
                android:hint="请输入您的密码"
                android:password="true"
                android:singleLine="true"
                />


            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/register_check_pswd_input"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

            <EditText
                android:id="@+id/reg_pwdEt2"
                android:inputType="textPassword"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="@dimen/login_input_item_height"
                android:paddingLeft="15dp"
                android:alpha="0.8"
                android:background="@drawable/my_edit_text"
                android:maxLength="20"
                android:hint="请再次输入您的密码"
                android:password="true"
                android:singleLine="true"
                />


            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">


            <TextView
                android:id="@+id/reg_regBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textSize="@dimen/register_text_size"
                android:clickable="true"
                android:gravity="center"
                android:textColor="@color/light_gray"
                android:text="注册" />




            <TextView
                android:id="@+id/backBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/light_gray"
                android:clickable="true"
                android:textSize="@dimen/register_back_text_size"
                android:text="返回"
                android:gravity="center" />


            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:id="@+id/reg_progressbar"
                android:indeterminate="false"
                android:visibility="invisible"/>

    </LinearLayout>

</LinearLayout>